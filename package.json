{
  "name": "questioner",
  "version": "1.0.0",
  "description": "A  questions crowd-sourcing application for meetup administrators",
  "main": "app.js",
  "scripts": {
    "test" : "nyc ---reporter=html --reporter=text mocha build/test/**/*.test.js --timeout 10000 --exit",
    "build": "rimraf build/ && babel ./ --out-dir build/ --ignore ./node_modules,./coverage,./.babelrc,./package.json,./npm-debug.log,./.travis.yml,./.eslintrc.js,./UI,./README.md --copy-files",
    "start": "npm run build && node build/app.js",
    "dev": "npm run build && babel-watch app.js",
    "coverage": "nyc report ---reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cupidcoder/questioner.git"
  },
  "keywords": [],
  "author": "Chukwudi Umeilechukwu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cupidcoder/questioner/issues"
  },
  "homepage": "https://github.com/cupidcoder/questioner#readme",
  "dependencies": {
    "express": "^4.16.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-watch": "^2.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2"
  }
}
